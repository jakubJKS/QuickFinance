<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <!-- Customize Account Icon Button -->
    <ImageButton
        android:id="@+id/accountCustomizationButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_settings"
        android:contentDescription="@string/customize_account" />

    <!-- Welcome TextView -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Welcome"
        android:padding="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@id/accountCustomizationButton" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/welcomeTextView"
        android:background="?android:attr/listDivider" />

    <!-- Horizontal Scrollable Bar -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Item 1"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/item2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Item 2"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/item3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Item 3"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/item4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Item 4"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/item5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Item 5"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/item6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Item 6"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/horizontalScrollView"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Account Balance Box -->
            <TextView
                android:id="@+id/accountBalanceTextView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:text="Account Balance: $0.00"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:clickable="true"
                android:focusable="true" />

            <!-- Product Boxes -->
            <TextView
                android:id="@+id/product1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:text="Product 1"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/product2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:text="Product 2"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/product3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:text="Product 3"
                android:textSize="18sp"
                android:background="@drawable/box_background"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <!-- Overview Button -->
        <Button
            android:id="@+id/overviewButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PrehÄ¾ad"
            android:padding="12dp" />

        <!-- Contacts Button -->
        <Button
            android:id="@+id/contactsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kontakty"
            android:padding="12dp" />
    </LinearLayout>
</RelativeLayout>
