<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LoginSignupSql" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="android:statusBarColor">@color/dark_gray</item> <!-- Nastavenie farby status baru -->
    </style>

    <style name="Theme.LoginSignupSql" parent="Base.Theme.LoginSignupSql" />

    <style name="YellowButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/OvalButtonShape</item>
    </style>

    <style name="OvalButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="YellowDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
